<%= form_for @question, :html => {:class =>"dark-matter"} do |f| %>
  <%= render partial: "/errors" %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>

    <%= f.submit %>
  </p>
<% end %>
