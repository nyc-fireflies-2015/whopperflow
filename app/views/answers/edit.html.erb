<h1>Editing answer</h1>

<%= form_for @answer, url: answer_path(@answer), method: :patch, :html => {:class =>"dark-matter"} do |f| %>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Destroy', answer_path(@answer), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', answers_path %>
